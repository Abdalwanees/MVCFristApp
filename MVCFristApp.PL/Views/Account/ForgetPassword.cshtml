@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="ForgetPassword" method="post">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" placeholder="Email" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Send Email</button>
                </form>
                @section ValidateSection {
                    <partial name="_ValidationScriptsPartial"></partial>
                }
            </div>
        </div>
    </div>
</div>

