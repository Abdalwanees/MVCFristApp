@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="SignIn" method="post">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" placeholder="Email" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password" required="">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" required="">
                        <label class="form-check-label">Remember Me</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">SignIn</button>
                </form>
                @section ValidateSection {
                    <partial name="_ValidationScriptsPartial"></partial>
                }
                <p class="text-center mt-3">Forget Password? <a asp-action="ForgetPassword">Reset Now!</a></p>
                <p class="text-center mt-3">Don't have an account? <a asp-action="SignUp">SignUp Now!</a></p>
            </div>
        </div>
    </div>
</div>
