@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model ResetPasswordViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="ResetPassword" method="post">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password" required="">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required="">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-3">Reset</button>
                </form>
                @section ValidateSection {
                    <partial name="_ValidationScriptsPartial"></partial>
                }
            </div>
        </div>
    </div>
</div>
