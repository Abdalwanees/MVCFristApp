@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="SignUp" method="post">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <input class="form-control" asp-for="FName" placeholder="First Name" required="">
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="LName" placeholder="Last Name" required="">
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" placeholder="Email" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password" required="">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required="">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="IsAgree" class="form-check-input" required="">
                        <label class="form-check-label">I Agree To The Terms & Conditions</label>
                        <span asp-validation-for="IsAgree" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">SignUp</button>
                </form>
                @section ValidateSection {
                    <partial name="_ValidationScriptsPartial"></partial>
                }
                <p class="text-center mt-3">Already have an account? <a asp-action="SignIn">Login Now!</a></p>
            </div>
        </div>
    </div>
</div>
