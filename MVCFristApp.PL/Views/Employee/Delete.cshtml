@{
    ViewData["Title"] = "Delete";
}

@model EmployeeViewModel 

<div class="min-vh-100 d-flex align-items-center flex-column justify-content-center">
    <div class="w-75 shadow shadow-sm rounded rounded-5 bg-white p-3">
        <div class="header mb-3">
            <h1 class="alert alert-warning">Are you sure you want to delete this Employee?</h1>
        </div>
        <div class="body">
            <partial name="PartialViews/DetailsDeletePartial"></partial>


            <!-- Form for deletion -->
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mt-2">Confirm Deleting</button>
                <a asp-action="Index" class="btn btn-secondary mt-2 ms-2">Back to list</a>
            </form>
        </div>
    </div>
</div>
