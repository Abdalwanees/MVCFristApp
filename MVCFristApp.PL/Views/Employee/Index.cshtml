@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
<section>
    <div class="container d-flex align-items-start min-vh-100 mt-2">
        <div class="w-100 mb-3">
            <div class="header">
                <h1 class="text-secondary">All Employees</h1>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary my-4">Add New Employee</a>
            </div>
            @if (Model.Count() > 0)
            {
                <div class="content">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(D => D.Name)</th>
                                <th>@Html.DisplayNameFor(D => D.Age)</th>
                                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                                <th>Details</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.Name</td>
                                    <td>@employee.Age</td>
                                    <td>@employee.Gender</td>
                                    <partial name="_buttonsPartial" model="@employee.Id"></partial>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="mt-3 alert alert-danger">
                    <h5><i class=""></i> There is no Employees yet.</h5>
                </div>
            }
        </div>
    </div>

</section>


