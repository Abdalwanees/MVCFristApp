
@{
    ViewData["Title"] = "Update";
}
@model DepartmentViewModel

<div class="min-vh-100 d-flex align-items-center flex-column justify-content-center">
    <div class="w-75 shadow shadow-sm rounded rounded-5 bg-white p-3">
        <div class="header mb-3">
            <h1>Update Project</h1>
        </div>
        <div class="body">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="PartialViews/CreateEditPartial"></partial>
                <input type="submit" value="Update" class="btn btn-primary mt-2" />
                <a asp-action="Index" class="btn btn-secondary my-2 ms-2">Cancel</a>
            </form>
            @section ValidateSection {
                <partial name="_ValidationScriptsPartial"></partial>
            }
        </div>
    </div>
</div>

