@{
    ViewData["Title"] = "Create";
}
@model Department

<div class="min-vh-100 d-flex align-items-center flex-column justify-content-center">
    <div class="w-75 shadow shadow-sm rounded rounded-5 bg-white p-3">
        <div class="header mb-3">
            <h1>Create New Department</h1>
        </div>
        <div class="body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label asp-for="Code" class="col-form-label"></label>
                    <input type="text" asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Name" class="col-form-label"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="DateOfCreation" class="col-form-label"></label>
                    <input type="datetime-local" asp-for="DateOfCreation" class="form-control" />
                    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
                </div>
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
                <a asp-action="Index" class="btn btn-secondary my-2 ms-2">Back to list</a>
            </form>
            @section ValidateSection {
                <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            }
        </div>
    </div>
</div>

