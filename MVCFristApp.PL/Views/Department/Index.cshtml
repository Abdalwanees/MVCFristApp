@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Department>
<section>
    
    <div class="container d-flex align-items-start min-vh-100 mt-2">
        <div class="w-100 mb-3">
            <div class="header">
                <h1 class="text-secondary">All Departments</h1>
                <a asp-controller="Department" asp-action="Create" class="btn btn-primary my-4">Add New Department</a>
            </div>
            @if(Model.Count()>0){
            <div class="content">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(D=>D.Code)</th>
                            <th>@Html.DisplayNameFor(D=>D.Name)</th>
                            <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var departmrnt in Model)
                        {
                            <tr>
                                <th>@departmrnt.Code</th>
                                <th>@departmrnt.Name</th>
                                <th>@departmrnt.DateOfCreation</th>
                                <th><a asp-controller="Department" asp-action="Details" asp-route-Id="@departmrnt.Id" class="btn btn-success text-white"> <i class="fa-solid fa-eye"></i> Details</a></th>
                                <th><a asp-controller="Department" asp-action="Update" asp-route-Id="@departmrnt.Id" class="btn btn-warning text-white"> <i class="fa-solid fa-pen-to-square"></i> Update</a></th>
                                <th><a asp-controller="Department" asp-action="Delete" asp-route-Id="@departmrnt.Id" class="btn btn-danger text-white"> <i class="fa-solid fa-trash"></i> Delete</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            }else
            {
                <div class="mt-3 alert alert-danger">
                    <h5><i class=""></i> There is no Department yet.</h5>
                </div>
            }
        </div>
    </div>
    
</section>


